<%- include('header') -%>
<div class="box" id="heading">
  <h1><%= dateBeingDisplayed %></h1>
</div>

<div class="box">
  <%newItemAdded.forEach((item)=>{%>
  <form action="/delete" method="post">
    <div class="item">
      <input type="checkbox" name="checkbox" value = "<%=item._id%>" onChange="this.form.submit()">
      <p><%=item.name%></p>
    </div>
    <input type="hidden" name="listName" value="<%=dateBeingDisplayed%>"></input>
  </form>
  <%});%>
    <form class="item" action="/" method="POST">
      <input type="text" name="workAdded" placeholder="New item" autocomplete="off">
      <button type="submit" name="listType" value="<%=dateBeingDisplayed%>">+</button>
  </form>
</div>

<%- include('footer') -%>
